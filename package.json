{
  "name": "express-service",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "rimraf dist && tsc --project tsconfig.build.json && tsc-alias",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=production tsx dist/index.js",
    "dev": "NODE_ENV=development tsx watch --clear-screen=false ./index.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "prepare": "husky && husky install",
    "migrate": "dotenv -e .env.$NODE_ENV -- prisma migrate dev",
    "seed": "dotenv -e .env.$NODE_ENV -- prisma db seed",
    "db-reset": "dotenv -e .env.$NODE_ENV -- prisma migrate reset"
  },
  "dependencies": {
    "@lucia-auth/adapter-prisma": "^4.0.1",
    "@prisma/client": "^5.12.1",
    "compression": "^1.8.1",
    "cookie-parser": "~1.4.7",
    "cors": "^2.8.5",
    "debug": "~4.4.1",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.4.1",
    "firebase-admin": "^13.4.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.3.0",
    "lucia": "^3.2.2",
    "multer": "^2.0.2",
    "oslo": "^1.2.1",
    "pino": "^8.20.0",
    "pino-http": "^9.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.8.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.3",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^29.5.12",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.12.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.10",
    "pino-pretty": "^11.0.0",
    "prettier": "3.6.2",
    "prisma": "^5.12.1",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^7.7.1"
  },
  "prisma": {
    "schema": "src/database/schema.prisma",
    "seed": "tsx src/database/seed.ts"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --max-warnings 0 ."
    ]
  }
}
